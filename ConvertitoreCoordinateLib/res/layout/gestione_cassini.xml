<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:orientation="vertical"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:paddingLeft="10dp"
  android:paddingRight="10dp"
  android:id="@+id/mainLayout">
    
	  	<LinearLayout 
	  		android:layout_width="fill_parent" 
	  		android:layout_height="wrap_content"
	  		android:orientation="horizontal">

            <TextView
                android:layout_height="wrap_content"
                android:layout_width="0dip"
                android:layout_weight="1"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/log_origine_cassini"
                android:layout_gravity="center"
                />

		    <TextView
		    	android:layout_height="wrap_content" 
		    	android:layout_width="0dip"
		    	android:layout_weight="1"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:id="@+id/tvOrigineCorrente"
                android:layout_gravity="center"
		    	/>
		    
		    <ImageButton android:src="@drawable/piu"
		    	android:layout_height="wrap_content"
		    	android:layout_width="wrap_content"
		    	android:id="@+id/btAggiungiCassini"
		    	android:background="@android:color/transparent"/>
		</LinearLayout>


        <ListView
	    	android:id="@+id/listaOriginiCassini"
	    	android:layout_width="fill_parent" 
	    	android:layout_height="fill_parent"
	    	android:listSelector="#99000000" android:cacheColorHint="#00000000" android:background="#00000000"/>
</LinearLayout>
