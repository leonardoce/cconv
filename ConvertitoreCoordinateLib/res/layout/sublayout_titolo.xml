<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
	 android:layout_width="match_parent"
	 android:layout_height="wrap_content"
	 android:background="#DDDDDD" android:layout_gravity="center">
	 
	 <ImageView android:layout_width="wrap_content" android:src="@drawable/iconv" android:layout_height="wrap_content" android:layout_gravity="center"
	 	android:layout_marginTop="5px"
	 	android:layout_marginBottom="5px"
	 	android:layout_marginLeft="20px"/>
	
	 <TextView 
	 	android:layout_width="wrap_content" 
	 	android:layout_height="wrap_content" 
	 	android:textAppearance="?android:attr/textAppearanceLarge"
	 	android:textColor="#000000"
	 	android:layout_marginLeft="20px" android:layout_gravity="center_vertical"
	 	android:id="@+id/textViewTitolo"/>	
</LinearLayout>
