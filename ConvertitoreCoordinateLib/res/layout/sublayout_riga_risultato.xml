<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="horizontal"
	android:layout_width="match_parent"
	android:layout_height="wrap_content">
    
    <TableLayout 
    	android:layout_width="fill_parent" 
    	android:layout_height="match_parent"
    	android:layout_weight="1">
    	<TableRow android:layout_width="match_parent" android:layout_height="wrap_content">
    		<TextView android:textAppearance="?android:attr/textAppearanceSmall" android:layout_width="wrap_content" android:text="@string/log_data_punto" android:layout_height="wrap_content" android:layout_marginRight="20px"></TextView>
    		<TextView android:textAppearance="?android:attr/textAppearanceSmall" android:layout_width="wrap_content" android:text="" android:layout_height="wrap_content" android:id="@+id/rigaDataPunto"></TextView>
    	</TableRow>
    	<TableRow android:layout_width="match_parent" android:layout_height="wrap_content">
    		<TextView android:textAppearance="?android:attr/textAppearanceSmall" android:layout_width="wrap_content" android:text="@string/log_descrizione" android:layout_height="wrap_content" android:layout_marginRight="20px"></TextView>
    		<TextView android:textAppearance="?android:attr/textAppearanceSmall" android:layout_width="wrap_content" android:text="" android:layout_height="wrap_content" android:id="@+id/rigaDescrizione"></TextView>
    	</TableRow>
    </TableLayout>
    
    <ImageButton 
    	android:id="@+id/rigaScegliRisultato"
    	android:src="@drawable/avanti"
    	android:layout_height="match_parent"
    	android:layout_width="wrap_content"
    	android:background="@android:color/transparent"/>    
</LinearLayout>
